[Unit]
Description=LXQt Power Management
Documentation=https://github.com/lxqt/lxqt-powermanagement
After=graphical-session.target
PartOf=graphical-session.target
ConditionEnvironment=LXQT_SESSION_MANAGER=uwsm

[Service]
Type=exec
ExecStart=/usr/bin/lxqt-powermanagement
Restart=on-failure
Slice=background-graphical.slice
TimeoutStopSec=5s
EnvironmentFile=-%t/uwsm/env_session.conf

[Install]
WantedBy=graphical-session.target
