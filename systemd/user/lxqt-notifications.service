[Unit]
Description=LXQt Notification Daemon
Documentation=https://github.com/lxqt/lxqt-notificationd
After=graphical-session.target
ConditionEnvironment=LXQT_SESSION_MANAGER=uwsm

[Service]
Type=exec
ExecStart=/usr/bin/lxqt-notificationd
Restart=on-failure
Slice=background-graphical.slice
TimeoutStopSec=5s

[Install]
WantedBy=graphical-session.target
